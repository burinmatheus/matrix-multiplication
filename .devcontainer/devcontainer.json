{
  "name": "Matrix Multiplication - Dev Container",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "containerEnv": {
    "DEVCONTAINER": "1"
  },
  "remoteEnv": {
    "DEVCONTAINER": "1"
  },
  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/usr/bin/python3"
      },
      "extensions": [
        "ms-vscode.cpptools",
        "ms-vscode.cmake-tools",
        "ms-python.python"
      ]
    }
  },
  "postCreateCommand": "make && bash scripts/auto_benchmark.sh",
  "remoteUser": "vscode"
}
